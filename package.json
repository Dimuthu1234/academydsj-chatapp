{
  "name": "academydsj-chat",
  "version": "1.0.0",
  "description": "Cross-platform desktop chat and video conferencing application for AcademyDSJ",
  "author": {
    "name": "AcademyDSJ",
    "email": "info@academydsj.com"
  },
  "homepage": "https://academydsj.com",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "ELECTRON=true concurrently \"vite\" \"electron .\"",
    "build": "tsc && vite build",
    "build:electron": "ELECTRON=true tsc && ELECTRON=true vite build && electron-builder",
    "build:web": "tsc && vite build",
    "build:android": "npm run build && npx cap sync android",
    "build:ios": "npm run build && npx cap sync ios",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:sync": "npx cap sync",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "axios": "^1.6.7",
    "buffer": "^6.0.3",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.321.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "recordrtc": "^5.6.2",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.7.4",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/simple-peer": "^9.11.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "build": {
    "appId": "com.academydsj.chat",
    "productName": "AcademyDSJ Chat",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "icon": "build-resources/icon.png",
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "build-resources/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build-resources/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build-resources/icons",
      "category": "Network",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
